{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./package",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "target": "esnext",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
